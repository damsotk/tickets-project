generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TICKETS_POSTGRES_URL")
  directUrl = env("TICKETS_POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // null if entry by Discord
  name      String
  avatar    String?  // URL avatar
  
  // Discord data (if entry from DS)
  discordId String?  @unique
  
  // Tokens
  refreshToken String? @db.Text
  
  role      UserRole @default(USER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}