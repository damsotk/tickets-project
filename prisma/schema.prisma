generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // null if entry by Discord
  name      String
  avatar    String?  // URL avatar
  
  // Discord data (if entry from DS)
  discordId String?  @unique
  
  // Tokens
  refreshToken String? @db.Text
  
  role      UserRole @default(USER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets   Ticket[]
  messages  Message[]
  
  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Ticket {
  id        String   @id @default(cuid())
  title     String   // Name of ticket
  
  // Theme (complaint, lore, tech) - use ENUM
  category  TicketCategory 
  
  // Connect with user who create ticket
  userId    String
  user      User   q  @relation(fields: [userId], references: [id], onDelete: Cascade) // When user deleted, delete him tickets

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) // Update when new message

  // Connect with messages
  messages  Message[]

  @@map("tickets")
}

enum TicketCategory {
  COMPLAINT
  LORE
  TECH
  OTHER
}

model Message {
  id        String   @id @default(cuid())
  text      String   @db.Text

  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade) // When ticket deleted, delete him message

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Restrict) // Doesnt delete user, if he has message

  createdAt DateTime @default(now())

  @@map("messages")
}